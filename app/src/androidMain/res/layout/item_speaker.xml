<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

    <ImageView
            android:id="@+id/iv_speaker_photo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/hint_speaker_image"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_speaker_photo"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

        <TextView
                android:id="@+id/tv_talk_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/hint_speaker_talk"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"/>

        <TextView
                android:id="@+id/tv_speaker_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/hint_speaker_name"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"/>
    </LinearLayout>
</RelativeLayout>